<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.collections.FXCollections?>
<?import com.jfoenix.controls.JFXTextArea?>
<GridPane alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OperatorController">
    <children>

        <JFXComboBox fx:id="userTypeComboBox" prefHeight="25.0" prefWidth="213.0" GridPane.rowIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <Label> Member </Label>
                    <Label> Provider </Label>
                </FXCollections>
            </items>
            <GridPane.margin>
                <Insets bottom="30.0" top="50.0" />
            </GridPane.margin>
        </JFXComboBox>

        <JFXTextField fx:id="idField" labelFloat="true" promptText="ID" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets bottom="20.0" />
            </GridPane.margin>
        </JFXTextField>
        <JFXButton onAction="#validateID" prefHeight="25.0" prefWidth="114.0" style="-fx-background-color: e3e3e3;" text="Search" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </JFXButton>
        <JFXTextArea fx:id="dataArea" labelFloat="true" promptText="Comments" GridPane.columnSpan="3" GridPane.rowIndex="4" editable="false">
            <GridPane.margin>
                <Insets bottom="20.0" />
            </GridPane.margin>
        </JFXTextArea>

        <JFXButton onAction="#cancel" prefHeight="25.0" prefWidth="114.0" style="-fx-background-color: e3e3e3;" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </JFXButton>
        <JFXButton onAction="#submitDeleteUser" prefHeight="25.0" prefWidth="114.0" style="-fx-background-color: e3e3e3;" text="Submit" GridPane.columnIndex="2" GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </JFXButton>

    </children>

</GridPane>